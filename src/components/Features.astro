---
import { ArrowRight } from "lucide-react";
---

<section class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(var(--color-grokBlue-500-rgb),0.08)_0%,transparent_70%)]"
    >
    </div>
  </div>

  <div class="relative overflow-hidden rounded-3xl">
    <div
      class="absolute inset-0 bg-gradient-to-br from-memhirETBlue-500/20 to-blue-600/20 backdrop-blur-sm"
    >
    </div>

    <div class="relative p-12 md:p-16 lg:p-20">
      <div class="max-w-3xl mx-auto text-center space-y-8">
        <span
          class="px-4 py-1.5 rounded-md text-sm font-medium bg-gray-300 text-memhirETBlue-500 inline-block"
        >
          Get Started Today
        </span>

        <h2
          class="text-4xl md:text-5xl font-bold text-memhirETWhite-500 font-bauhaus"
        >
          Ready to Transform Your
          <span
            class="block mt-2 bg-clip-text text-transparent bg-gradient-to-r from-memhirETBlue-500 to-blue-400"
          >
            Educational Journey?
          </span>
        </h2>

        <p class="text-lg text-memhirETWhite-500/80 max-w-2xl mx-auto">
          Join thousands of students, parents and educators already benefiting
          from our solutions. Take your first step towards creating accessible
          and equitable education.
        </p>

        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <a
            href="/contact"
            class="group flex items-center gap-2 px-8 py-4 bg-memhirETBlue-500 text-white font-medium rounded-lg hover:bg-memhirETBlue-600 transition-all duration-300"
          >
            Let's talk
            <ArrowRight
              className="w-4 h-4 group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>
    </div>

    <div
      class="absolute top-0 left-0 w-32 h-32 bg-memhirETBlue-500/20 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 right-0 w-32 h-32 bg-blue-500/20 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="grid grid-cols-2 gap-8 mt-20">
    {
      [
        { number: "1K+", label: "Active Students" },
        { number: "10+", label: "Partner Schools" },
      ].map((stat) => (
        <div class="text-center">
          <div class="text-3xl font-bold text-memhirETWhite-500 mb-2">
            {stat.number}
          </div>
          <div class="text-sm text-memhirETWhite-500/70">{stat.label}</div>
        </div>
      ))
    }
  </div>
</section>
